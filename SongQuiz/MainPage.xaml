<Page
    x:Class="SongQuiz.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SongQuiz"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0"
               Source="logo.png"/>
        <Button Grid.Row="1" 
                Content="Play" 
                Click="{x:Bind Play}" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                FontSize="60"
                MinWidth="400"/>
        <Button Grid.Row="2" 
                Content="Create Game" 
                Click="{x:Bind CreateGame}"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="60"
                MinWidth="400"
                />
    </Grid>
</Page>
